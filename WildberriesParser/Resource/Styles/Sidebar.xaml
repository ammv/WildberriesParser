<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style x:Key="NavButton" TargetType="RadioButton">
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Style" Value="{StaticResource MaterialDesignOutlinedLightButton}" />
            </Trigger>
            <Trigger Property="IsChecked" Value="False">
                <Setter Property="Style" Value="{StaticResource MaterialDesignFlatLightButton}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>