<Window x:Class="WildberriesParser.View.Admin.AdminMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WildberriesParser.View.Admin"
        xmlns:vm="clr-namespace:WildberriesParser.ViewModel"
        xmlns:custom="clr-namespace:WildberriesParser.Resource.UserControls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:intr="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        WindowState="{Binding WindowState, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="MainView"
        Height="800"
        Width="1280">
    <materialDesign:Card UniformCornerRadius="10"
            Margin="5"
            Background="White">
        <intr:Interaction.Triggers>
            <intr:EventTrigger EventName="MouseLeftButtonDown">
                <intr:CallMethodAction TargetObject="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}}"
                                       MethodName="DragMove" />
            </intr:EventTrigger>
        </intr:Interaction.Triggers>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Margin="0 20 20 0">

                <Button Style="{DynamicResource windowTopButton}"
                        Command="{Binding WrapWindowCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource
                                        Mode=FindAncestor,
                                        AncestorType=Window}}">
                    <Button.Background>
                        <ImageBrush ImageSource="/WildberriesParser;component/Resource/Images/wnd_wrap_btn.png" />
                    </Button.Background>
                </Button>
                <Line Width="25" />
                <ToggleButton Style="{DynamicResource windowRecoverUnwrapButton}"
                              Command="{Binding RecoverOrUnwrapWindowCommand}"
                              IsChecked="False"
                              CommandParameter="{Binding RelativeSource={RelativeSource
                                        Mode=FindAncestor,
                                        AncestorType=Window}}">
                </ToggleButton>
                <Line Width="25" />
                <Button Style="{DynamicResource windowCloseButton}">
                    <intr:Interaction.Triggers>
                        <intr:EventTrigger EventName="Click">
                            <intr:InvokeCommandAction Command="{Binding CloseWindowCommand}"
                                                      CommandParameter="{Binding RelativeSource={RelativeSource
                                                  Mode=FindAncestor,
                                                  AncestorType=Window}}" />
                        </intr:EventTrigger>
                    </intr:Interaction.Triggers>
                </Button>
            </StackPanel>

            <materialDesign:ColorZone Grid.RowSpan="2"
                                      Mode="PrimaryDark"
                                      CornerRadius="10 0 0 10"
                                      Opacity="1"
                                      VerticalAlignment="Stretch"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth5">
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.15*" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.15*" />
                    </Grid.ColumnDefinitions>

                    <Image Source="/WildberriesParser;component/Resource/Images/AppLogo128x128.ico"
                           Grid.ColumnSpan="3"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="40" />

                    <StackPanel Grid.Row="1"
                                Grid.Column="1">
                        <RadioButton materialDesign:ButtonAssist.CornerRadius="10"
                                     Command="{Binding UsersCommand}"
                                     IsChecked="True"
                                     Height="40"
                                     HorizontalAlignment="Stretch"
                                     Margin="0 0 0 15"
                                     HorizontalContentAlignment="Left"
                                     Style="{StaticResource MaterialDesignFlatButton}">
                            <intr:Interaction.Triggers>
                                <intr:DataTrigger Value="True"
                                                  Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=RadioButton, Mode=FindAncestor}}">
                                    <intr:ChangePropertyAction PropertyName="Style"
                                                               Value="{StaticResource MaterialDesignOutlinedLightButton}" />
                                </intr:DataTrigger>
                                <intr:DataTrigger Value="False"
                                                  Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=RadioButton, Mode=FindAncestor}}">
                                    <intr:ChangePropertyAction PropertyName="Style"
                                                               Value="{StaticResource MaterialDesignFlatButton}" />
                                </intr:DataTrigger>
                            </intr:Interaction.Triggers>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="Users"
                                                         VerticalAlignment="Center"
                                                         Height="32"
                                                         Width="32"
                                                         Margin="0 0 10 0" />
                                <TextBlock Text="Пользователи"
                                           VerticalAlignment="Center"
                                           FontSize="16" />
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Command="{Binding HistoryCommand}"
                                     materialDesign:ButtonAssist.CornerRadius="10"
                                     Height="40"
                                     HorizontalAlignment="Stretch"
                                     Margin="0 0 0 15"
                                     HorizontalContentAlignment="Left"
                                     Style="{StaticResource MaterialDesignFlatButton}">
                            <intr:Interaction.Triggers>
                                <intr:DataTrigger Value="True"
                                                  Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=RadioButton, Mode=FindAncestor}}">
                                    <intr:ChangePropertyAction PropertyName="Style"
                                                               Value="{StaticResource MaterialDesignOutlinedLightButton}" />
                                </intr:DataTrigger>
                                <intr:DataTrigger Value="False"
                                                  Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=RadioButton, Mode=FindAncestor}}">
                                    <intr:ChangePropertyAction PropertyName="Style"
                                                               Value="{StaticResource MaterialDesignFlatButton}" />
                                </intr:DataTrigger>
                            </intr:Interaction.Triggers>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="History"
                                                         VerticalAlignment="Center"
                                                         Height="32"
                                                         Width="32"
                                                         Margin="0 0 10 0" />
                                <TextBlock Text="История"
                                           VerticalAlignment="Center"
                                           FontSize="16" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton materialDesign:ButtonAssist.CornerRadius="10"
                                     Command="{Binding SettingsCommand}"
                                     Height="40"
                                     HorizontalAlignment="Stretch"
                                     Margin="0 0 0 15"
                                     HorizontalContentAlignment="Left"
                                     Style="{StaticResource MaterialDesignFlatButton}">
                            <intr:Interaction.Triggers>
                                <intr:DataTrigger Value="True"
                                                  Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=RadioButton, Mode=FindAncestor}}">
                                    <intr:ChangePropertyAction PropertyName="Style"
                                                               Value="{StaticResource MaterialDesignOutlinedLightButton}" />
                                </intr:DataTrigger>
                                <intr:DataTrigger Value="False"
                                                  Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=RadioButton, Mode=FindAncestor}}">
                                    <intr:ChangePropertyAction PropertyName="Style"
                                                               Value="{StaticResource MaterialDesignFlatButton}" />
                                </intr:DataTrigger>
                            </intr:Interaction.Triggers>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="Settings"
                                                         VerticalAlignment="Center"
                                                         Height="32"
                                                         Width="32"
                                                         Margin="0 0 10 0" />
                                <TextBlock Text="Настройки"
                                           VerticalAlignment="Center"
                                           FontSize="16" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <ContentPresenter Content="{Binding NavigationService.CurrentView}"
                              Grid.Row="1"
                              Grid.Column="1"
                              Margin="20" />
        </Grid>
    </materialDesign:Card>
</Window>